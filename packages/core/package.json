{
  "name": "@changebot/core",
  "version": "0.1.18",
  "description": "Changebot widgets - Stencil web components",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/widgets/widgets.esm.js",
  "exports": {
    ".": {
      "import": "./dist/widgets/widgets.esm.js",
      "require": "./dist/widgets/widgets.cjs.js"
    },
    "./dist/components/changebot-badge.js": {
      "import": "./dist/components/changebot-badge.js",
      "types": "./dist/components/changebot-badge.d.ts"
    },
    "./dist/components/changebot-banner.js": {
      "import": "./dist/components/changebot-banner.js",
      "types": "./dist/components/changebot-banner.d.ts"
    },
    "./dist/components/changebot-panel.js": {
      "import": "./dist/components/changebot-panel.js",
      "types": "./dist/components/changebot-panel.d.ts"
    },
    "./dist/components/changebot-provider.js": {
      "import": "./dist/components/changebot-provider.js",
      "types": "./dist/components/changebot-provider.d.ts"
    },
    "./dist/components/changebot-toast.js": {
      "import": "./dist/components/changebot-toast.js",
      "types": "./dist/components/changebot-toast.d.ts"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs",
      "types": "./loader/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/changebot-ai/widgets.git",
    "directory": "packages/core"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate"
  },
  "devDependencies": {
    "@stencil/core": "^4.27.1",
    "@stencil/react-output-target": "^1.2.0",
    "@stencil/vue-output-target": "^0.11.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "puppeteer": "^24.3.0"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@stencil/store": "^2.2.0"
  }
}
